#:import COLOR kivy.utils.get_color_from_hex
#:set RED "#F94A69"
#:set GREEN "#06A5AB"
#:set micro sp(12)
#:set small sp(14)
#:set medium sp(18)
#:set large sp(22)

<WrappedLabel@Label>:
    size_hint_y: None
    height: self.texture_size[1] + (self.texture_size[1] / 2)
    markup: True

<LabelMedio@Label>:
    font_size: small
    size_hint_x: 0.3
    markup: True

<Botao@Button>:
    font_size: small
    spacing: 40

<GerenciadorRoot>:
    orientation: 'vertical'

    ActionBar:
        ActionView:
            ActionPrevious:
                title: ''
                with_previous: False
            ActionOverflow:
                ActionButton:
                    text: "Settings"
                    on_press: app.open_settings()
                ActionButton:
                    text: "Exportar dados"
                    on_press: app.exportDB()

    ScreenManager:
        id: screen_manager
        StartScreen:
            name: "start_screen"
        PedidosScreen:
            id: pedidos_screen
            name: "pedidos_screen"
        ListaPedidosScreen:
            id: listaPedidos_screen
            name: "listaPedidos_screen"
        ClientesScreen:
            id: clientes_screen
            name: "clientes_screen"
        CardapioScreen:
            id: cardapio_screen
            name: "cardapio_screen"

<StartScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: root.width * .02, root.height * .02
        spacing: min(root.width, root.height) * .02

        WrappedLabel:
            text: "[b]Gerenciador de Pedidos[/b]"
            font_size: large

        Botao:
            text: "Anotar Pedido"
            background_normal: ''
            background_color: COLOR(RED)
            on_release: app.root.changeScreen(self.text.lower())
        Botao:
            text: "Listar Pedidos"
            on_release: app.root.changeScreen(self.text.lower())
        Botao:
            text: "Clientes"
            on_release: app.root.changeScreen(self.text.lower())
        Botao:
            text: "Cardápio"
            on_release: app.root.changeScreen(self.text.lower())

<PedidosScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: root.width * .02, root.height * .02
        BoxLayout:
            LabelMedio:
                text: "Cliente"
            Spinner:
                id: cliente
                text: '---'
                font_size: medium
                values: app.getClientes()

        BoxLayout:
            LabelMedio:
                text: "Pedido"
            Spinner:
                id: pedido
                text: '---'
                font_size: medium
                values: app.getProdutos()

        BoxLayout:
            LabelMedio:
                text: "Data de\nentrega"
            TextInput:
                id: data
                font_size: medium
                text: app.getDate()
                multiline: True
                # padding_x: self.width / 4
                # padding_y: self.height / 4

        BoxLayout:
            LabelMedio:
                text: "Quantidade"
            TextInput:
                id: quantidade
                font_size: medium
                text: '1'
                multiline: True
                on_text_validate: self.text = ""

        BoxLayout:
            LabelMedio:
                text: "Observação"
            TextInput:
                id: observacao
                font_size: medium
                hint_text: "Insira alguma observação sobre o pedido"
                # padding_x: self.width / 4
                # padding_y: self.height / 4

        LabelMedio:
            text: ""
            size_hint: (None, 1)

        Botao:
            text: "Gravar"
            background_normal: ''
            background_color: COLOR(RED)
            spacing: 40
            on_release: app.gravarPedido()

<ListaPedidosScreen@Screen>:
    ScatterLayout:
        do_translation: False
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        rotation: 90.0
        Label:
            text: app.getPedidos()
            markup: True
            font_name: 'RobotoMono-Regular'
            font_size: micro

<ClientesScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        WrappedLabel:
            text: "[b]Clientes[/b]"
            font_size: large
        BoxLayout:
            LabelMedio:
                text: "Nome"
            TextInput:
                id: nome
                font_size: medium
                text: ""
                multiline: True
        BoxLayout:
            LabelMedio:
                text: "Endereço"
            TextInput:
                id: endereco
                font_size: medium
                text: ""
                multiline: True
        BoxLayout:
            LabelMedio:
                text: "Telefone"
            TextInput:
                id: telefone
                font_size: medium
                text: ""
                multiline: True
        BoxLayout:
            LabelMedio:
                text: "E-mail"
            TextInput:
                id: email
                font_size: medium
                text: ""
                multiline: True
        LabelMedio:
            text:""
            size_hint: (None, 1)
        BoxLayout:
            Botao:
                text: "Gravar"
                background_normal: ''
                background_color: COLOR(RED)
                on_release: app.gravarCliente()

<CardapioScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        WrappedLabel:
            text: "[b]Cardápio[/b]"
            font_size: large
        BoxLayout:
            LabelMedio:
                text: "Produto"
            TextInput:
                id: produto
                font_size: medium
                text: ""
                multiline: True
        LabelMedio:
            text:""
            size_hint: (None, 3)
        BoxLayout:
            Botao:
                text: "Gravar"
                background_normal: ''
                background_color: COLOR(RED)
                on_release: app.gravarProduto()
